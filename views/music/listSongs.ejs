<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Songs</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <%- include('../partials/nav.ejs') %>
    <h1>Explore Songs:</h1>
    <div class="songs-grid">
    <% songs.forEach(song => { %>
      <div class="song-card">
        <h3><%= song.title %></h3>
        <p>Artist: <%= song.artist %></p>

        <% if (user) { %>
          <form 
            action="/songs/<%= song._id %>/add-to-playlist" 
            method="POST" 
            class="add-to-playlist-form"
          >
            <label for="pl-<%= song._id %>">Add to:</label>
            <select id="pl-<%= song._id %>" name="playlistId" required>
              <option value="" disabled selected>Choose playlistâ€¦</option>
              <% playlists.forEach(playlist => { %>
                <option value="<%= playlist._id %>"><%= playlist.title %></option>
              <% }) %>
            </select>
            <button type="submit">Add</button>
          </form>
        <% } %>
      </div>
    <% }) %>
  </div>
</body>
</html>